@using EgitimPortali.DTO
@model List<YorumlarDto>
@{
    ViewData["Title"] = "ButunYorumlar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-title">
                    <span class="float-right">(<strong>@ViewBag.toplam</strong>) yorum</span>
                    <h5>Bütün Yorumlar</h5>
                </div>
                <div class="ibox-content">
                    <div class="row m-b-sm m-t-sm">

                        <div class="col-md-12">
                            @using (Html.BeginForm("Index", "Yorumlar", FormMethod.Post))
                            {
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control" name="n" placeholder="Yorum ara...">
                                    <div class="input-group-append">
                                        <button class="btn btn-success" type="submit">
                                            <i class="fa fa-search"></i>
                                            Ara
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <br />
                    <div class="table-responsive">
                        @foreach (var x in Model)
                        {
                            <table class="table shoping-cart-table">

                                <tbody>
                                    <tr>
                                        @if(x.DersIcerikleri.Resim != null)
                                        {
                                            <td width="90">
                                            <img src="@x.DersIcerikleri.Resim" style="max-width:100%;" />                                           
                                        </td>
                                        }
                                        else
                                        {
                                               <td width="90">
                                            <img src="~/Edu-School-Starter/assets/images/merkez.jpg" style="max-width:100%;" />                                           
                                        </td>
                                        }
                                     
                                        <td class="desc">
                                            <h3>
                                                <a href="#" class="text-navy">
                                                   @x.DersIcerikleri.Name
                                              </a>
                                            </h3>
                                        
                                          
                                            
                                            <p class="small">
                                                @x.Name
                                            </p>


                                            <div class="m-t-sm">

                                                <a href="/Yorumlar/YorumSil/@x.Id" class="text-muted"><i class="fa fa-trash"></i> Yorumu Kaldır</a>
                                            </div>
                                        </td>


                                        <td width="200">
                                            <h4>
                                                @(((DateTime)x.CreatedAt).ToString("dd-MMM-yyyy"))
                                            </h4>


                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <hr />
                        }
                    </div>

                </div>


                <div class="ibox-content">
@*                    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
*@

                </div>
            </div>
        </div>
    </div>
</div>