@using EgitimPortali.DTO
@model List<TestDto>
@{
    ViewData["Title"] = "ButunTestler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>ButunTestler</h1>

<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">

            <div class="ibox">
                <div class="ibox-title">
                    <h5>Bütün Testler</h5>
                </div>
                <div class="ibox-content">
                    <div class="row m-b-sm m-t-sm">
                        <div class="col-md-12">
                            <div class="input-group">
                                <input type="text" placeholder="Ara..." class="form-control-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Bul!</button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="project-list">
                        <table class="table table-hover">
                            <tbody>
                                @foreach (var x in Model)
                                {
                                    <tr>
                                        <td class="project-title">
                                            <a href="project_detail.html">@x.Name</a>
                                            <br />
                                            <small></small>
                                        </td>
                                        <td class="project-actions">
                                            <a href="/Ogrenci/TestiSil/@x.Id" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Testi Sil </a>
                                            <a href="/MerkezeTeget/Test/@x.Id" class="btn btn-warning btn-sm"><i class="fa fa-link"></i> Teste Git </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>