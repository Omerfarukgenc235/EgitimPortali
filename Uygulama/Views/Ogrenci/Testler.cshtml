@using EgitimPortali.DTO
@model List<CozulenTestDto>
@{
    ViewData["Title"] = "Testler";
    Layout = "~/Views/Shared/_OgrenciLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">

            <div class="ibox">
                <div class="ibox-title">
                    <h5>Çözülen Testler</h5>
                    <div class="ibox-tools">
                        <a href="" class="btn btn-primary btn-xs">Create new project</a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row m-b-sm m-t-sm">

                        <div class="col-md-12">
                            <div class="input-group">
                                <input type="text" placeholder="Ara..." class="form-control-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Bul!</button>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="project-list">
                        <table class="table table-hover">
                            <tbody>
                                @foreach (var x in Model)
                                {
                                    <tr>
                                        <td class="project-title">
                                            <a href="project_detail.html">@x.Name</a>
                                            <br />
                                            <small></small>
                                        </td>
                                        <td class="project-actions">
                                            <a href="/MerkezeTeget/Test/@x.Id" class="btn btn-white btn-sm"><i class="fa fa-link"></i> Teste Git </a>
                                            <a href="/Ogrenci/TestCevaplarim/@x.Id" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i> Yanıtları Gör </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>